extends ../shared/template

block content 

  h2 Items

  table
    thead
      tr
        th Name
        th Length
        th Width
        th Height
        th Weight
        th Quantity
        th MSRP
        th Percent Off
        th Cost
    tbody

    each item in items
      tr.item(style='background-color:#{item.color};')
        td: a(href='/items/#{item._id}')=item.name
        td= item.dimensions.l
        td= item.dimensions.w
        td= item.dimensions.h
          td= item.weight
          td= item.quantity
          td= item.msrp
          td= item.percentOff
          td= item.cost().toFixed(2)


