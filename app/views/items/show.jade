extends ../shared/template

block content

      form(method='post', action='/items/#{item._id}')
        input(type='hidden', name='_method', value='delete')
        button Delete Item #{item.name}

    table
      thead.item(style='background-color:rgba(0,0,0,.2);')
        tr
          th Name
          th Length
          th Width
          th Height
          th Weight
          th Quantity
          th MSRP
          th Percent Off
          th Cost
       tbody

        tr.item(style='background-color:white;')
          td: a(href='/items/#{item._id}')=item.name
          td= item.dimensions.l
          td= item.dimensions.w
          td= item.dimensions.h
          td= item.weight
          td= item.quantity
          td= item.msrp
          td= item.percentOff
          td= item.cost().toFixed(2)

